<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.auth.mapper.RoleDeptMapper">

    <resultMap id="BaseResultMap" type="com.demo.auth.entity.RoleDept">
        <!--@Table t_role_dept-->
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="deptId" column="dept_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          role_id, dept_id
        from t_role_dept
        where role_id = #{roleId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          role_id, dept_id
        from t_role_dept
        <if test="offset >= 0 and limit >= 0" >
            limit #{offset}, #{limit}
        </if>
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          role_id, dept_id
        from t_role_dept
        <where>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
            <if test="deptId != null">
                and dept_id = #{deptId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="roleId" useGeneratedKeys="true">
        insert into auth.t_role_dept()
        values ()
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update auth.t_role_dept
        <set>
        </set>
        where role_id = #{roleId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from t_role_dept where role_id = #{roleId}
    </delete>

</mapper>